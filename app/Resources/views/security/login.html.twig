{% extends 'base.html.twig' %}

{% block body %}
    <h1 id = "title">Schedules</h1>
    <div id = "login_box">
        <a id = "signup_tab" class = "tab" href = "{{ path('register') }}">Sign Up</a>
        <a id = "login_tab" class = "tab active" href = "{{ path('login') }}" }}>Login</a>
        <br>
        {% if error %}
            <h5 id = "error_msg">{{ error.messageKey|trans(error.messageData, 'security') }}</h5>
        {% else %}
            <h5 id = "error_msg"></h5>
        {% endif %}
        <form action="{{ path('login') }}" method="post">
            <p class = "username-input-register">
            <label for="username">Username</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" />
            </p>
            <p class = "password-input-register">
            <label for="password">Password</label>
            <input type="password" id="password" name="_password" />
            </p>
            <p class = "submit-register">
            <button type="submit">Login</button>
            </p>
        </form>
    </div>
{% endblock %}


